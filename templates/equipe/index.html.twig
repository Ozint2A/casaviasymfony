{% extends 'base.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
    <h1>Equipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Heure_debut</th>
                <th>Heure_fin</th>
                <th>Debut_pause</th>
                <th>Fin_pause</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.id }}</td>
                <td>{{ equipe.nom }}</td>
                <td>{{ equipe.heureDebut ? equipe.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ equipe.heureFin ? equipe.heureFin|date('H:i:s') : '' }}</td>
                <td>{{ equipe.debutPause ? equipe.debutPause|date('H:i:s') : '' }}</td>
                <td>{{ equipe.finPause ? equipe.finPause|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}">show</a>
                    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipe_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Equipe{% endblock %}

{% block body %}
    <h1>Equipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ equipe.nom }}</td>
            </tr>
            <tr>
                <th>Heure_debut</th>
                <td>{{ equipe.heureDebut ? equipe.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_fin</th>
                <td>{{ equipe.heureFin ? equipe.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Debut_pause</th>
                <td>{{ equipe.debutPause ? equipe.debutPause|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin_pause</th>
                <td>{{ equipe.finPause ? equipe.finPause|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipe_index') }}">back to list</a>

    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">edit</a>

    {{ include('equipe/_delete_form.html.twig') }}
